<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

<Product Id="*" UpgradeCode="F1ECCC2F-953C-4978-9FE7-EBC70916AFA0" Language="1033"
         Manufacturer="Bob -- K6RWY" Name="CodeGenII"
         Version="!(bind.fileVersion.CodeGenII.cmp)"
         >

  <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine"
           Manufacturer="Bob -- K6RWY" Description="Installs CodeGenII"
           Comments="Copyright (c) Bob -- K6RWY"
           />

  <MajorUpgrade Schedule="afterInstallInitialize"
                AllowDowngrades="no"   IgnoreRemoveFailure="no"   AllowSameVersionUpgrades="no"
                DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

  <MediaTemplate EmbedCab="yes" />

  <UI Id="My_InstallDir.ui">
    <UIRef Id="WixUI_InstallDir" />
    <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="InstallDirDlg">
      NOT Installed
    </Publish>
    <Publish Dialog="InstallDirDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="2">
      1
    </Publish>
  </UI>

  <WixVariable Id="WixUIDialogBmp" Value="C:\Program Files (x86)\WixApp\dialog.bmp"/>
  <WixVariable Id="WixUIBannerBmp" Value="C:\Program Files (x86)\WixApp\banner.bmp"/>

  <Icon     Id="UICodeGenIIIcon.ico"
                                SourceFile="$(var.SolutionDir)..\CodeGenII.prj\res\UICodeGenII.ico"/>
  <Icon     Id="CodeGenIIIcon.ico" SourceFile="$(var.SolutionDir)..\CodeGenII.prj\res\CodeGenII.ico"/>
  <Property Id="ARPPRODUCTICON"  Value="UICodeGenIIIcon.ico" />

  <Feature Id="ProductFeatures" Title="Main Product" Level="1" >
    <ComponentGroupRef Id="CodeGenII.ftr"/>
    <ComponentGroupRef Id="UninstallCodeGenII.ftr"/>
  </Feature>
</Product>

<Fragment>
<ComponentGroup Id="CodeGenII.ftr">
  <ComponentRef Id="CodeGenII.cmp"/>
  <ComponentRef Id="Help.cmp"/>
</ComponentGroup>
<ComponentGroup Id="UninstallCodeGenII.ftr">
  <ComponentRef Id="UninstallCodeGenII.cmp"/>
</ComponentGroup>
</Fragment>

<!--Directory structure-->
<Fragment>
  <Directory Id="TARGETDIR" Name="SourceDir">
    <Directory Id="ProgramFilesFolder">
      <Directory Id="CodeGenII.pff" Name="CodeGenII" />
    </Directory>

    <Directory Id="ProgramMenuFolder" Name="StartMenu">
      <Directory Id="CodeGenII.pmf" Name="CodeGenII" />
    </Directory>

    <Directory Id="DesktopFolder" Name="Desktop" />
  </Directory>

  <Property Id="ApplicationFolderName" Value="CodeGenII" />
  <Property Id="WIXUI_INSTALLDIR"      Value="CodeGenII.pff"/>
  <Property Id="WixAppFolder"          Value="WixPerMachineFolder" />
</Fragment>

<Fragment>

  <Component Id="CodeGenII.cmp"  Guid="886CFA3D-5315-4BB5-8C7C-37D12686CEA4" Directory="CodeGenII.pff">
    <File Id="CodeGenII.cmp" Source="$(var.SolutionDir)..\Release\CodeGenII.exe" KeyPath="yes"/>

    <Shortcut Id               = "CodeGenII.shc"
              Name             = "CodeGenII"
              Description      = "Create Modules for accessing a database"
              Advertise        = "yes"
              Directory        = "CodeGenII.pmf"
              WorkingDirectory = "CodeGenII.pff"
              Icon             = "CodeGenIIIcon.ico"
              />

    <Shortcut Id               = "CodeGenII.dsk"
              Name             = "CodeGenII"
              Description      = "Create Modules for accessing a database"
              Advertise        = "yes"
              Directory        = "DesktopFolder"
              WorkingDirectory = "CodeGenII.pff"
              Icon             = "CodeGenIIIcon.ico"
              />
  </Component>

  <Component Id="Help.cmp"  Guid="86EB6CA6-13BE-4D2D-9DBE-E96D7597A1E7" Directory="CodeGenII.pff">
    <File Id="Help.cmp" Source="$(var.SolutionDir)..\Release\CodeGenII.chm" KeyPath="yes"/>
  </Component>

</Fragment>

<Fragment>

  <Component Id="UninstallCodeGenII.cmp" 
                                Guid="2AE4557B-56DF-4F66-8D50-C506F3BD9C30" Directory="CodeGenII.pmf">

    <Shortcut Id               = "UninstallCodeGenII.shc"
              Name             = "Uninstall CodeGenII"
              Description      = "Uninstalls CodeGenII"
              Target           = "[System64Folder]msiexec.exe"
              Arguments        = "/x [ProductCode]"
              Icon             = "UICodeGenIIIcon.ico"
              />
    <RemoveFolder Id="CodeGenII.uni" Directory="CodeGenII.pmf" On="uninstall"/>
    <RegistryValue Root="HKCU" Key="Software\UninstallCodeGenII.cmp" Name="installed"
                   Type="integer" Value="1" KeyPath="yes"/>
  </Component>

</Fragment>

</Wix>
